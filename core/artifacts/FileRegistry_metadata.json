			"kind": "dev",
			"methods": {
				"addFile(bytes32,string,address,uint256)": {
					"details": "Adds a new file to the registry",
					"params": {
						"_fileHash": "Hash of the file",
						"_fileName": "Name of the file",
						"_owner": "Address of the file owner",
						"_size": "Size of the file in bytes"
					}
				},
				"checkAccess(bytes32,address)": {
					"details": "Checks if a user has access to a file",
					"params": {
						"_fileHash": "Hash of the file",
						"_user": "Address of the user to check"
					},
					"returns": {
						"_0": "Boolean indicating whether the user has access"
					}
				},
				"getFileInfo(bytes32)": {
					"details": "Retrieves file metadata",
					"params": {
						"_fileHash": "Hash of the file"
					},
					"returns": {
						"fileName": "The name of the file",
						"owner": "The owner of the file",
						"size": "The size of the file",
						"timestamp": "The timestamp of the file"
					}
				},
				"getUserFiles(address)": {
					"details": "Retrieves all files owned by a user",
					"params": {
						"_user": "Address of the user"
					},
					"returns": {
						"_0": "Array of file hashes owned by the user"
					}
				},
				"owner()": {
					"details": "Returns the address of the current owner."
				},
				"renounceOwnership()": {
					"details": "Leaves the contract without owner. It will not be possible to call `onlyOwner` functions. Can only be called by the current owner. NOTE: Renouncing ownership will leave the contract without an owner, thereby disabling any functionality that is only available to the owner."
				},
				"setFileAccess(bytes32,address,bool)": {
					"details": "Sets access permissions for a file",
					"params": {
						"_canAccess": "Boolean indicating whether the user can access the file",
						"_fileHash": "Hash of the file",
						"_user": "Address of the user to grant/revoke access"
					}
				},
				"transferOwnership(address)": {
					"details": "Transfers ownership of the contract to a new account (`newOwner`). Can only be called by the current owner."
				}
